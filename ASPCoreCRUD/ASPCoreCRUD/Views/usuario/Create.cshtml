@model ASPCoreCRUD.Models.usuarioModel
 @{
     ViewBag.Title = "Crear Usuario";

  }


<form asp-action="Create">
    <div class="container">
        <div class="row">
            <div style="width:25%; height:50%; margin:10% auto;">
                <div class="form-group">
                    <label >Nombre Completo: </label>
                    <input type="text" asp-for="nombrecompleto" class="form-control">
                </div>
                <div class="form-group">
                    <label>Usuario: </label>
                    <input class="form-control" asp-for="iniciosesion" >
                </div>
                <div class="form-group">
                    <label >Contraseña: </label>
                    <input type="password" class="form-control" asp-for="clave">
                </div>
                <div class="form-group">
                    <label>Fecha de nacimiento:</label>
                    <div class='input-group date' id='datetimepicker1'>
                        <input type='text' id="datepick" class="form-control" asp-for="fechanamimiento" />

                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
                @*<div class="form-group">
                    <label>Rol: </label>
                    <select class="form-control" asp-for="perfil.idperfil" asp-items="@(new SelectList(@ViewBag.PerfilList, "idperfil", "nombre"))"/>
                </div>*@
                <div class="form-group">
                    <div class="checkbox">
                        <label><input type="checkbox" asp-for="activo">Activo</label>
                    </div>

                </div>                    
                <button type="submit" class="btn btn-default">Guardar</button>
            </div>
        </div>
    </div>
</form>
<script src="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css"> </script>
<script>
    $(document).ready(function () {
        $('#datepick').datepicker()
    });
</script>